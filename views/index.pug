html
  head
    title Product search
    style(type="text/css").
      html, body{
        padding: 0;
        margin: 0;
      }
      body {
        display: flex;
        width: 100%;
        justify-content: center;
        align-items: center;
      }
      label {
        font-size: 26px;
      }
      .bar {
        display: flex;
      }
      input {
        height: 50px;
        font-size: 26px;
      }
      input:focus {
        outline: none;
      }
      input[type=number]::-webkit-inner-spin-button, 
      input[type=number]::-webkit-outer-spin-button { 
        -webkit-appearance: none; 
        margin: 0; 
      }
      button {
        height: 50px;
        width: 100px;
        font-size: 20px;
        cursor: pointer;
        
      }
      .doesExist {
        color: green;
        font-size: 20px;
      }
      .doesNotExist {
        font-size: 20px;
        color: red;
      }
      .id {
        font-size: 20px;
        font-weight: bold;
      }
  body
    form(method='GET' action='/search')
      label(for='productId') Enter product id
      div(class='bar')
        input(type='number' name='productId')
        button(type='submit') Search
      div
        span(class="id")
        span(class="doesExist")
        span(class="doesNotExist")
        #doesExist
          if (doesExist && id)
            span.id= id
            span.doesExist  does exist
          else if (id)
            span.id= id
            span.doesNotExist  does not exist

